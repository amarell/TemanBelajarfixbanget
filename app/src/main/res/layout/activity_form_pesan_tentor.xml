<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormPesanTentor">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/background_gradient" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_centerVertical="false"
        android:background="#FFF"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Jumlah Pertemuan "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/Et_jml_pertemuan"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_person"
            android:hint="masukan jumlah pertemuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Jam pertemuan "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/Et_jam_pertemuan"
            android:drawablePadding="20dp"
            android:inputType="time"
            android:drawableRight="@drawable/ic_email"
            android:hint="16:40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Hari pertemuan "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/Et_hari_pertemuan"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_phone"
            android:hint="senin, selasa, ..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_transaksi"
            android:layout_marginTop="20dp"
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient"
            android:textAllCaps="true"
            android:text="Pesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_width="198dp"
        android:layout_height="41dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo_temanbelajar" />

    <ImageView
        android:layout_width="49dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:src="@drawable/back_logo"
        android:id="@+id/back_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:text="Isi Data pemesanan anda"
        android:textColor="#FFF"
        android:textSize="20sp" />


</RelativeLayout>